<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/background_dark"
                tools:context="${relativePackage}.${activityClass}" >

    <ImageView
            android:id="@+id/Lev8Iv"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/lev8"
            android:contentDescription="@string/lev8_iv"/>

    <EditText
            android:id="@+id/Lev8Et"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Lev8Iv"
            android:background="@drawable/style"
            android:ems="10"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:maxLength="7"
            android:hint="@string/lev8_et"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:textColor="@android:color/holo_blue_bright" >

        <requestFocus />
    </EditText>

    <Button
            android:id="@+id/Lev8SubmitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/Lev8HintButton"
            android:background="@drawable/style"
            android:onClick="Submit"
            android:layout_marginBottom="5dp"
            android:text="@string/lev8_submit_button"
            android:textSize="30sp" />



    <Button
            android:id="@+id/Lev8HintButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/startAppBanner"
            android:background="@drawable/style"
            android:onClick="Hint"
            android:layout_marginBottom="5dp"
            android:text="@string/lev8_hint_button"
            android:textSize="30sp" />


    <com.startapp.android.publish.banner.Banner
            android:id="@+id/startAppBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" >
    </com.startapp.android.publish.banner.Banner>
</RelativeLayout>